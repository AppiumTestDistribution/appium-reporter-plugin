{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio"
        ],
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
, "types/global.d.ts"    ]
}
