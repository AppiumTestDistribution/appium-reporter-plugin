{
  "name": "appium-server-reporter",
  "version": "0.0.0-beta.1",
  "description": "Appium 2.0 plugin for generating html report with screenshots server side.",
  "main": "./lib/index.js",
  "scripts": {
    "build": "npx tsc",
    "install-plugin": "npm run build && appium plugin install --source=local $(pwd)",
    "reinstall-plugin": "(appium plugin uninstall appium-server-reporter || exit 0) && npm run install-plugin",
    "test": "mocha --require ts-node/register ./test/*.spec.js --timeout 260000",
    "lint": "npx eslint . --fix",
    "prettier": "npx prettier 'src/**/*.js' --write --single-quote"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AppiumTestDistribution/appium-server-reporter.git"
  },
  "keywords": [
    "appium2",
    "report",
    "screenshot"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AppiumTestDistribution/appium-server-reporter/issues"
  },
  "homepage": "https://github.com/AppiumTestDistribution/appium-server-reporter#readme",
  "dependencies": {
    "@appium/base-plugin": "^1.8.5",
    "edit-json-file": "^1.7.0",
    "node-fetch": "^2.6.7",
    "pretty-hrtime": "^1.0.3",
    "sharp": "^0.30.7",
    "uuid": "^8.3.2"
  },
  "appium": {
    "pluginName": "appium-server-reporter",
    "mainClass": "ReportPlugin"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/eslint-parser": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "webdriverio": "^7.20.7"
  }
}
